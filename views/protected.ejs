    p {
      text-align: center;
    }
    a {
      color: #3498db;
      text-decoration: none;
    }
    a:hover {
      /* text-decoration: underline; */
      border: 2px solid #3498db;
      border-top: none;
      border-left: none;
      border-right: none;
    }
