<h1>NodeJS Auth Essentials</h1>
<% if (typeof username === 'undefined') { %>
    <p>
      The following content is<br>
      <strong>protected</strong>.<br><br>
      <strong><a href="/">Back home</a></strong>
    </p>
<% } %>

<% if (typeof username !== 'undefined') { %>
    <p>
      The following content is<br>
      <strong>available</strong> for <strong><%= username %></strong>.<br><br>
      <strong><a href="/">Back home</a></strong>
    </p>
<% } %>